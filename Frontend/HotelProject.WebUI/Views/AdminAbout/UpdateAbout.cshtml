@model UpdateAboutDTO

@{
    ViewData["Title"] = "UpdateAbout";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-controller="AdminAbout" asp-action="UpdateAbout" method="post" enctype="multipart/form-data">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hakkımızda Bilgilerini Güncelle</h4>
                <div class="basic-form">
                    <form>
                        <input type="hidden" asp-for="AboutID">
                        <div class="form-group row">
                            <label asp-for=Title1 class="col-sm-2 col-form-label">Başlık 1:</label>
                            <div class="col-sm-10">
                                <input asp-for=Title1 type="text" class="form-control input-rounded" placeholder="Başlık 1">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Title2 class="col-sm-2 col-form-label">Başlık 2:</label>
                            <div class="col-sm-10">
                                <input asp-for=Title2 type="text" class="form-control input-rounded" placeholder="Başlık 2">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Content class="col-sm-2 col-form-label">İçerik:</label>
                            <div class="col-sm-10">
                                <textarea asp-for=Content class="form-control rounded h-150px" rows="5"></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=RoomCount class="col-sm-2 col-form-label">Oda Sayısı:</label>
                            <div class="col-sm-10">
                                <input asp-for=RoomCount type="number" class="form-control input-rounded" placeholder="Oda Sayısı">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=StaffCount class="col-sm-2 col-form-label">Çalışan Sayısı:</label>
                            <div class="col-sm-10">
                                <input asp-for=StaffCount type="number" class="form-control input-rounded" placeholder="Çalışan Sayısı">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=CustomerCount class="col-sm-2 col-form-label">Misafir Sayısı:</label>
                            <div class="col-sm-10">
                                <input asp-for=CustomerCount type="number" class="form-control input-rounded" placeholder="Misafir Sayısı">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>