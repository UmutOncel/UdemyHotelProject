@model List<SendboxSendMessageDTO>

@{
    ViewData["Title"] = "Sendbox";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <div class="email-left-box">
                        <a asp-controller="AdminContact" asp-action="AddSendMessage" class="btn btn-primary btn-block">Yeni Mesaj Oluştur</a>
                        @await Component.InvokeAsync("AdminContactSidebar")

                        @await Html.PartialAsync("/Views/AdminContact/AdminContactCategorySidebarPartial.cshtml")
                    </div>
                    <div class="email-right-box">
                        <div class="email-list m-t-15">
                            @foreach (var item in Model)
                            {
                                <div class="message">
                                    <a asp-controller="AdminContact" asp-action="SendboxMessageDetails" asp-route-id="@item.SendMessageID">
                                        <div class="col-mail col-mail-2">
                                            <div class="subject">
                                                <b>Alıcı: @item.ReceiverName</b> Konu: @item.Title
                                            </div>
                                            <div class="date">@item.Date.ToShortDateString()</div>
                                        </div>
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>