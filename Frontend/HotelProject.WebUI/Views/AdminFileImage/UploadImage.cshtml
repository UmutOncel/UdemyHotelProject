
@{
    ViewData["Title"] = "UploadImage";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-controller="AdminFileImage" asp-action="UploadImage" method="post" enctype="multipart/form-data">
    <div class="form-group">
        @* yüklenen dosyanın parametre olarak görünmesi için "name="file"" kısımını ekleriz. Aksi halde parametre file null geliyor!!! *@
        <input type="file" name="file" class="form-control-file">
    </div>
    <button class="btn btn-primary" type="submit">Dosyayı Yükle</button>
</form>