@model AddRoomDTO

@{
    ViewData["Title"] = "AddRoom";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-controller="AdminRoom" asp-action="AddRoom" method="post" enctype="multipart/form-data">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Yeni Oda Ekle</h4>
                <div class="basic-form">
                    <form>
                        <div class="form-group row">
                            <label asp-for=RoomNumber class="col-sm-2 col-form-label">Oda Numarası:</label>
                            <div class="col-sm-10">
                                <input asp-for=RoomNumber type="number" class="form-control input-rounded" placeholder="Oda Numarası">
                            </div>
                            <span asp-validation-for="RoomNumber" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Title class="col-sm-2 col-form-label">Oda Başlığı:</label>
                            <div class="col-sm-10">
                                <input asp-for=Title type="text" class="form-control input-rounded" placeholder="Oda Başlığı">
                            </div>
                            <span asp-validation-for="Title" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Price class="col-sm-2 col-form-label">Oda Ücreti:</label>
                            <div class="col-sm-10">
                                <input asp-for=Price type="number" class="form-control input-rounded" placeholder="Oda Ücreti">
                            </div>
                            <span asp-validation-for="Price" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=BedCount class="col-sm-2 col-form-label">Yatak Sayısı:</label>
                            <div class="col-sm-10">
                                <input asp-for=BedCount type="number" class="form-control input-rounded" placeholder="Yatak Sayısı">
                            </div>
                            <span asp-validation-for="BedCount" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=BathCount class="col-sm-2 col-form-label">Banyo Sayısı:</label>
                            <div class="col-sm-10">
                                <input asp-for=BathCount type="number" class="form-control input-rounded" placeholder="Banyo Sayısı">
                            </div>
                            <span asp-validation-for="BathCount" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Wifi class="col-sm-2 col-form-label">Wifi:</label>
                            <div class="col-sm-10">
                                <input asp-for=Wifi type="text" class="form-control input-rounded" placeholder="Wifi">
                            </div>
                            <span asp-validation-for="Wifi" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Image class="col-sm-2 col-form-label">Oda Görseli:</label>
                            <div class="col-sm-10">
                                <input asp-for=Image type="file" class="form-control input-rounded" placeholder="Oda Görseli">
                            </div>
                            <span asp-validation-for="Image" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Description class="col-sm-2 col-form-label">Açıklama:</label>
                            <div class="col-sm-10">
                                <textarea asp-for=Description class="form-control rounded h-150px" rows="5" placeholder="Açıklama"></textarea>
                            </div>
                            <span asp-validation-for="Description" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn mb-1 btn-rounded btn-outline-info">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>