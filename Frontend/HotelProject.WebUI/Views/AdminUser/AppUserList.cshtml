@model List<ResultAppUserListDTO>

@{
    ViewData["Title"] = "AppUserList";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int counter = 0;
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="card-title" style="display:flex; justify-content:space-between; align-items:center">
                        <h4>Kullanıcı Listesi</h4>
                        <a asp-controller="Register" asp-action="Index" type="submit" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Kullanıcı Ekle</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Kullanıcı</th>
                                    <th>Şehir</th>
                                    <th>Ülke</th>
                                    @* <th>Durum</th> *@
                                    <th>Cinsiyet</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    counter++;
                                    <tr>
                                        <td>@counter</td>
                                        <td>
                                            <img src="@item.ImageUrl" class=" rounded-circle mr-3" alt="@item.Name @item.Surname"> @item.Name @item.Surname
                                        </td>
                                        <td>
                                            <span>@item.City</span>
                                        </td>
                                        <td>
                                            <span>@item.Country</span>
                                        </td>
                                        @* <td>
                                            <div>
                                                <div class="progress" style="height: 6px">
                                                    <div class="progress-bar bg-success" style="width: 50%"></div>
                                                </div>
                                            </div>
                                        </td> *@
                                        <td>
                                            @if (item.Gender == "Erkek")
                                            {
                                                <i class="fa fa-circle-o text-danger  mr-2"></i> @item.Gender
                                            }
                                            @if (item.Gender == "Kadın")
                                            {
                                                <i class="fa fa-circle-o text-warning  mr-2"></i> @item.Gender
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
