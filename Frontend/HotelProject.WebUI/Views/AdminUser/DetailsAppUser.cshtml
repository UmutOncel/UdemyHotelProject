@model DetailsAppUserDTO

@{
    ViewData["Title"] = "DetailsAppUser";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.Name @Model.Surname İsimli Kullanıcının Detayları</h4>
                <div class="basic-form">
                    <form>
                        <div class="form-group row">
                            <label asp-for=ImageUrl class="col-sm-2 col-form-label">Profil Resmi:</label>
                            <div class="col-sm-10">
                                <img class="img-fluid" width="300px" height="300px" style="border-radius: 5%" src="@Model.ImageUrl" alt="@Model.Name @Model.Surname">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Name class="col-sm-2 col-form-label">Adı:</label>
                            <div class="col-sm-10">
                                <input asp-for=Name type="text" class="form-control input-rounded" placeholder="Adı" disabled>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Surname class="col-sm-2 col-form-label">Soyadı:</label>
                            <div class="col-sm-10">
                                <input asp-for=Surname type="text" class="form-control input-rounded" placeholder="Soyadı" disabled>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Username class="col-sm-2 col-form-label">Kullanıcı Adı:</label>
                            <div class="col-sm-10">
                                <input asp-for=Username type="text" class="form-control input-rounded" placeholder="Kullanıcı Adı" disabled>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Email class="col-sm-2 col-form-label">Email Adresi:</label>
                            <div class="col-sm-10">
                                <input asp-for=Email type="text" class="form-control input-rounded" placeholder="Email Adresi" disabled>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Country class="col-sm-2 col-form-label">Ülke:</label>
                            <div class="col-sm-10">
                                <input asp-for=Country type="text" class="form-control input-rounded" placeholder="Ülke" disabled>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=City class="col-sm-2 col-form-label">Şehir:</label>
                            <div class="col-sm-10">
                                <input asp-for=City type="text" class="form-control input-rounded" placeholder="Şehir" disabled>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Gender class="col-sm-2 col-form-label">Cinsiyet:</label>
                            <div class="col-sm-10">
                                <input asp-for=Gender type="text" class="form-control input-rounded" placeholder="Cinsiyet" disabled>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=WorkLocationName class="col-sm-2 col-form-label">Şube:</label>
                            <div class="col-sm-10">
                                @foreach (var item in Model.WorkLocationName)
                                {
                                    <input asp-for=@item type="text" class="form-control input-rounded" placeholder="Şube" disabled>
                                }
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=AppRoles class="col-sm-2 col-form-label">Rolleri:</label>
                            <div class="col-sm-10">
                                @if(Model.AppRoles.Count == 0)
                                {
                                    <input type="text" class="form-control input-rounded mb-2" placeholder="Kullanıcıya henüz rol ataması yapılmamıştır." disabled>
                                }
                                else
                                {
                                    @foreach (var item in Model.AppRoles)
                                    {
                                        <input asp-for=@item type="text" class="form-control input-rounded mb-2" placeholder="Rol" disabled>
                                    }
                                }
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <a asp-controller="AdminUser" asp-action="Index" class="btn mb-1 btn-rounded btn-outline-info">Geri Dön</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>