@model UpdateAppRoleDTO

@{
    ViewData["Title"] = "UpdateAppRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-controller="AppRole" asp-action="UpdateAppRole" method="post" enctype="multipart/form-data">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Rolü Güncelle</h4>
                <div class="basic-form">
                    <form>
                        <input type="hidden" asp-for="Id">
                        <div class="form-group row">
                            <label asp-for=Name class="col-sm-2 col-form-label">Rol Adı:</label>
                            <div class="col-sm-10">
                                <input asp-for=Name type="text" class="form-control input-rounded" placeholder="Rol Adı">
                            </div>
                            <span asp-validation-for="Name" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>