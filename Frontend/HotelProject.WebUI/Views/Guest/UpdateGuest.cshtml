@model UpdateGuestDTO

@{
    ViewData["Title"] = "UpdateGuest";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-controller="Guest" asp-action="UpdateGuest" method="post" enctype="multipart/form-data">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Misafiri Güncelle</h4>
                <div class="basic-form">
                    <form>
                        <input type="hidden" asp-for="GuestID">
                        <div class="form-group row">
                            <label asp-for=Firstname class="col-sm-2 col-form-label">Ad:</label>
                            <div class="col-sm-10">
                                <input asp-for=Firstname type="text" class="form-control input-rounded" placeholder="Ad">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Lastname class="col-sm-2 col-form-label">Soyad:</label>
                            <div class="col-sm-10">
                                <input asp-for=Lastname type="text" class="form-control input-rounded" placeholder="Soyad">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=City class="col-sm-2 col-form-label">Şehir:</label>
                            <div class="col-sm-10">
                                <input asp-for=City type="text" class="form-control input-rounded" placeholder="Şehir">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>