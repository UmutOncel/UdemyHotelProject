@model LoginUserDTO

@{
    Layout = null;
}

<!DOCTYPE html>
<html class="h-100" lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Otel Kullanıcı Giriş Paneli</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/adminweb/assets/images/favicon.png">
    <!-- <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous"> -->
    <link href="~/adminweb/css/style.css" rel="stylesheet">

    <style>
        body{
            margin: 0;
            padding: 0;
            background-image: url('/hotel-html-template/img/LoginPageImage.jpg');
            background-size: cover;
            background-position: center;
        }
    </style>
</head>

<body class="h-100">

    <!--*******************
        Preloader start
    ********************-->
    <div id="preloader">
        <div class="loader">
            <svg class="circular" viewBox="25 25 50 50">
                <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="3" stroke-miterlimit="10" />
            </svg>
        </div>
    </div>
    <!--*******************
        Preloader end
    ********************-->
    <div class="login-form-bg h-100">
        <div class="container h-100">
            <div class="row justify-content-center h-100">
                <div class="col-xl-6">
                    <div class="form-input-content">
                        <div class="card login-form mb-0">
                            <div class="card-body pt-1">
                                <a class="text-center" asp-controller="Login" asp-action="Index"> <h4>Otel Kullanıcı Giriş Paneli</h4></a>

                                <form class="mt-3 mb-1 login-input" asp-controller="Login" asp-action="Index" method="post">
                                    
                                    @* ModelState.AddModelError() mesajının çıkması için yazdık. "ModelOnly" seçersek bu kısımda sadece ModelState.AddModelError()'da yazılanlar gözükür. Data Annotations hataları label altında çıkar. *@
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                    
                                    <div class="form-group">
                                        <input asp-for="Username" type="text" class="form-control" placeholder="Kullanıcı Adı">
                                        <span asp-validation-for="Username" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <input asp-for="Password" type="password" class="form-control" placeholder="Şifre">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <button class="btn login-form__btn submit w-100">Giriş Yap</button>
                                </form>

                                <p class="mt-3 login-form__footer">Hesabınız yok mu? <a asp-controller="Register" asp-action="Index" class="text-primary">Kaydol</a>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--**********************************
        Scripts
    ***********************************-->
    <script src="~/adminweb/plugins/common/common.min.js"></script>
    <script src="~/adminweb/js/custom.min.js"></script>
    <script src="~/adminweb/js/settings.js"></script>
    <script src="~/adminweb/js/gleek.js"></script>
    <script src="~/adminweb/js/styleSwitcher.js"></script>
</body>
</html>
