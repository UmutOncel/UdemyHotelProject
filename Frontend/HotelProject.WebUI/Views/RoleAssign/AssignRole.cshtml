@model List<ResultRoleAssignDTO>

@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-controller="RoleAssign" asp-action="AssignRole" method="post" enctype="multipart/form-data">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Rol Ataması Yap</h4>
                <br/>
                <div class="basic-form">
                    <form>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <div class="form-group row">
                                <div class="form-check mb-3">
                                    <label asp-for=@Model[i].IsRoleExist class="form-check-label">
                                        @* bu prop'ları hidden olarak tutmazsak Post metoduna parametre olarak giderken "NULL" gidiyor. Ekranda gizliyoruz ama Post metoduna değerini yollamış oluyoruz. *@
                                        <input type="hidden" asp-for="@Model[i].RoleId">
                                        <input type="hidden" asp-for="@Model[i].RoleName">
                                        <input type="hidden" asp-for="@Model[i].UserId">
                                        <input type="checkbox" asp-for=@Model[i].IsRoleExist class="form-check-input">
                                        @Model[i].RoleName
                                    </label>
                                </div>
                            </div>
                        }
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn mb-1 btn-rounded btn-outline-info">Kullanıcı İçin Rol Ataması Yap</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>
