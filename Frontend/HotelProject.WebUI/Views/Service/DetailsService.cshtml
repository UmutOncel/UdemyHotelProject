@model DetailsServiceDTO

@{
    ViewData["Title"] = "DetailsService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form>
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">@Model.Title İsimli Hizmetin Detayları</h4>
                <div class="basic-form">
                    <form>
                        <div class="form-group row">
                            <label asp-for=ServiceIcon class="col-sm-2 col-form-label">Hizmet İkonu:</label>
                            <div class="col-sm-10">
                                <i class="@Model.ServiceIcon"></i>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Title class="col-sm-2 col-form-label">Başlık:</label>
                            <div class="col-sm-10">
                                <input asp-for=Title type="text" class="form-control input-rounded" placeholder="Başlık" disabled>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Description class="col-sm-2 col-form-label">Açıklama:</label>
                            <div class="col-sm-10">
                                <textarea asp-for=Description class="form-control rounded h-100px" rows="5" placeholder="Açıklama" disabled></textarea>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <a asp-controller="Service" asp-action="Index" class="btn mb-1 btn-rounded btn-outline-info">Geri Dön</a>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>