@model UpdateServiceDTO

@{
    ViewData["Title"] = "UpdateService";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-controller="Service" asp-action="UpdateService" method="post" enctype="multipart/form-data">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Hizmeti Güncelle</h4>
                <div class="basic-form">
                    <form>
                        <input type="hidden" asp-for="ServiceID">
                        <div class="form-group row">
                            <label asp-for=ServiceIcon class="col-sm-2 col-form-label">Hizmet İkonu:</label>
                            <div class="col-sm-10">
                                <input asp-for=ServiceIcon type="text" class="form-control input-rounded" placeholder="Hizmet İkonu">
                            </div>
                            <span asp-validation-for="ServiceIcon" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Title class="col-sm-2 col-form-label">Başlık:</label>
                            <div class="col-sm-10">
                                <input asp-for=Title type="text" class="form-control input-rounded" placeholder="Başlık">
                            </div>
                            <span asp-validation-for="Title" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Description class="col-sm-2 col-form-label">Açıklama:</label>
                            <div class="col-sm-10">
                                <input asp-for=Description type="text" class="form-control input-rounded" placeholder="Açıklama">
                            </div>
                            <span asp-validation-for="Description" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>