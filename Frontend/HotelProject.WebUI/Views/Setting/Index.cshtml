@model SettingDTO

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-controller="Setting" asp-action="Index" method="post" enctype="multipart/form-data">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Kişisel Bilgileri Güncelle</h4>
                <br/>
                <div class="basic-form">
                    <form>
                        <div class="form-group row">
                            <label asp-for=ImageUrl class="col-sm-2 col-form-label"> Mevcut Resim:</label>
                            <div class="col-sm-10">
                                <img class="img-fluid" width="300px" height="300px" style="border-radius: 5%" src="@Model.ImageUrl" alt="@Model.Firstname @Model.Lastname">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Photo class="col-sm-2 col-form-label">Profil Resmi:</label>
                            <div class="col-sm-10">
                                <input asp-for=Photo type="file" class="form-control input-rounded" placeholder="Oda Görseli">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Username class="col-sm-2 col-form-label">Kullanıcı Adı:</label>
                            <div class="col-sm-10">
                                <input asp-for=Username type="text" class="form-control input-rounded" placeholder="Kullanıcı Adı" readonly>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Firstname class="col-sm-2 col-form-label">Ad:</label>
                            <div class="col-sm-10">
                                <input asp-for=Firstname type="text" class="form-control input-rounded" placeholder="Ad">
                            </div>
                            <span asp-validation-for="Firstname" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Lastname class="col-sm-2 col-form-label">Soyad:</label>
                            <div class="col-sm-10">
                                <input asp-for=Lastname type="text" class="form-control input-rounded" placeholder="Soyad">
                            </div>
                            <span asp-validation-for="Lastname" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Email class="col-sm-2 col-form-label">Email Adresi:</label>
                            <div class="col-sm-10">
                                <input asp-for=Email type="email" class="form-control input-rounded" placeholder="Email Adresi">
                            </div>
                            <span asp-validation-for="Email" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=Password class="col-sm-2 col-form-label">Şifre:</label>
                            <div class="col-sm-10">
                                <input asp-for=Password type="password" class="form-control input-rounded" placeholder="Şifre">
                            </div>
                            <span asp-validation-for="Password" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <label asp-for=ConfirmPassword class="col-sm-2 col-form-label">Şifre Tekrarı:</label>
                            <div class="col-sm-10">
                                <input asp-for=ConfirmPassword type="password" class="form-control input-rounded" placeholder="Şifre Tekrarı">
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger offset-sm-2"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>