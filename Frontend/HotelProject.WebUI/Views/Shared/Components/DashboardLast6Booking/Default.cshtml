@model List<ResultLast6BookingDTO>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <div class="active-member">
                    <div class="table-responsive">
                        <table class="table table-xs mb-0">
                            <thead>
                                <tr>
                                    <th>Misafir</th>
                                    <th>Şehir</th>
                                    <th>Ülke</th>
                                    <th>Rezervasyon Durumu</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach(var item in Model)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.City</td>
                                        <td>@item.Country</td>
                                        <td>
                                            @if (item.Status == "Onaylandı")
                                            {
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-success" style="width: 100%"></div>
                                                    </div>
                                                    <td>
                                                        <i class="fa fa-circle-o text-success  mr-2"></i> @item.Status
                                                    </td>
                                                </div>
                                            }
                                            else if (item.Status == "Onay Bekliyor")
                                            {
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-primary" style="width: 100%"></div>
                                                    </div>
                                                    <td>
                                                        <i class="fa fa-circle-o text-primary  mr-2"></i> @item.Status
                                                    </td>
                                                </div>
                                            }
                                            else if (item.Status == "İptal Edildi")
                                            {
                                                <div>
                                                    <div class="progress" style="height: 6px">
                                                        <div class="progress-bar bg-danger" style="width: 100%"></div>
                                                    </div>
                                                    <td>
                                                        <i class="fa fa-circle-o text-danger  mr-2"></i> @item.Status
                                                    </td>
                                                </div>
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>