@model List<StaffVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    int counter = 0;
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-body">
            <div class="card-title" style="display:flex; justify-content:space-between; align-items:center">
                <h4>Personel Listesi</h4>
                <a asp-controller="Staff" asp-action="AddStaff" type="submit" class="btn mb-1 btn-rounded btn-outline-primary">Yeni Personel Ekle</a>
            </div>
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Profil Resmi</th>
                            <th>Ad Soyad</th>
                            <th>Ünvan</th>
                            <th>Güncelle</th>
                            <th>Sil</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var item in Model)
                        {
                            counter++;
                            <tr>
                                <td>@counter</td>
                                <td>
                                    <img src="@item.Image" class=" rounded-circle mr-3" width="50px" height="50px" alt="@item.Name">
                                </td>
                                <td>@item.Name</td>
                                <td>@item.Title</td>
                                <td>
                                    <a asp-controller="Staff" asp-action="UpdateStaff" asp-route-id="@item.StaffID" type="button" class="btn mb-1 btn-rounded btn-outline-warning">Güncelle</a>
                                </td>
                                <td>
                                    <a asp-controller="Staff" asp-action="DeleteStaff" asp-route-id="@item.StaffID" type="submit" class="btn mb-1 btn-rounded btn-outline-danger">Sil</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>