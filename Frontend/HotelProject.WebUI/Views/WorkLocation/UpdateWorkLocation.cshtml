@model UpdateWorkLocationDTO

@{
    ViewData["Title"] = "UpdateWorkLocation";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
}

<form asp-controller="WorkLocation" asp-action="UpdateWorkLocation" method="post" enctype="multipart/form-data">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Lokasyonu Güncelle</h4>
                <div class="basic-form">
                    <form>
                        <input type="hidden" asp-for="WorkLocationID">
                        <div class="form-group row">
                            <label asp-for=Name class="col-sm-2 col-form-label">İsim:</label>
                            <div class="col-sm-10">
                            <input asp-for=Name type="text" class="form-control input-rounded" placeholder="İsim">
                            </div>
                        </div>
                        <div class="form-group row">
                            <label asp-for=City class="col-sm-2 col-form-label">Şehir:</label>
                            <div class="col-sm-10">
                                <input asp-for=City type="text" class="form-control input-rounded" placeholder="Şehir">
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-sm-10">
                                <button type="submit" class="btn mb-1 btn-rounded btn-outline-info">Güncelle</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</form>