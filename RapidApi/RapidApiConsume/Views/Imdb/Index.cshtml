@model List<ApiMovieVM>

@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Adı</th>
                    <th scope="col">Gösterim Yılı</th>
                    <th scope="col">Reytingi</th>
                    <th scope="col">Afişi</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.rank</td>
                        <td>@item.title</td>
                        <td>@item.year</td>
                        <td>@item.rating</td>
                        <td><img src="@item.big_image" class="img-thumbnail rounded" style="height:100px" alt="@item.title"></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
